---
export const prerender = false;
import AdminRouter from "@/components/admin/router/AdminRouter";
import "@/styles/global.css";
// Ensure global styles are loaded if they aren't already by a layout.
// Since this is a standalone test page, we might need a basic HTML shell if not using a layout.
// AdminRouter uses AdminLayout which expects some base styles.
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <title>SPA Refactor Test</title>
    </head>
    <body>
        <!-- Mount the React Router App here. 
             client:only="react" is crucial because React Router strictly runs in the browser.
             We set the basename to match this file's route path.
        -->
        <AdminRouter client:only="react" basename="/admin/spa_test" />
    </body>
</html>

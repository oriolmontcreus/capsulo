---
import Hero from "@/components/Hero.astro";
import { loadPageData, getComponentDataByKey } from "@/lib/cms-loader";

// Load CMS data for the index page
const pageData = await loadPageData("index");

// Get Hero component data using the schema key
const heroData = getComponentDataByKey(pageData, "hero");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Capsulo CMS</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <!-- Hero component with CMS data injection -->
    <Hero
      title={heroData?.title}
      subtitle={heroData?.subtitle}
      ctaButton={heroData?.ctaButton}
      ctaLinkType={heroData?.ctaLinkType}
      ctaLink="/admin"
    />
  </body>
</html>

---
/**
 * CMS Layout - Automatically loads and injects CMS data
 * 
 * This layout automatically:
 * - Validates locale and redirects if invalid
 * - Detects the current page ID from URL
 * - Loads only the current page's CMS data + globals (performance optimized)
 * - Makes CMS data available to all components via global context
 * 
 */

import "../styles/global.css";
import Navbar from "@/components/Navbar.astro";
import { getPageCMS } from "@/lib/cms-auto";
import { setCMSContext } from "@/lib/cms-context";
import { getLocaleFromPathname, DEFAULT_LOCALE } from "@/lib/i18n-utils";


const currentLocale = getLocaleFromPathname(Astro.url.pathname) || DEFAULT_LOCALE;

// Automatically load CMS data for this page (only current page + globals)
const cms = await getPageCMS(Astro);

// Set CMS context for components to access
setCMSContext({
    components: cms.components,
    globals: cms.globals,
    locale: cms.locale,
});

const siteTitle = cms.globals?.siteName || "TESTUI";
---

<script is:inline>
	document.documentElement.classList.add("dark");
</script>

<html lang={currentLocale}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{siteTitle}</title>
	</head>
	<body>
		<Navbar siteTitle={siteTitle} currentLocale={currentLocale} />
		<main id="cms-main">
			<slot />
		</main>
        
        {import.meta.env.DEV && (
            <script>
                // HMR listener for live preview
                if (import.meta.hot) {
                    import.meta.hot.on('capsulo:preview-update', async () => {
                        console.log('[capsulo] Preview update received, updating content...');
                        
                        try {
                            // Fetch the current page content from the server
                            // Since CMS data is updated in memory on the server, this will return the new HTML
                            const response = await fetch(window.location.href);
                            if (!response.ok) throw new Error('Fetch failed');
                            
                            const html = await response.text();
                            const parser = new DOMParser();
                            const newDoc = parser.parseFromString(html, 'text/html');
                            
                            // 1. Update Title preserving state
                            if (newDoc.title && document.title !== newDoc.title) {
                                document.title = newDoc.title;
                            }
                            
                            // 2. Update Header Title (preserving other header elements like LocaleSwitcher)
                            const newHeaderTitle = newDoc.getElementById('cms-site-title');
                            const currentHeaderTitle = document.getElementById('cms-site-title');
                            if (newHeaderTitle && currentHeaderTitle) {
                                if (newHeaderTitle.innerHTML !== currentHeaderTitle.innerHTML) {
                                    currentHeaderTitle.innerHTML = newHeaderTitle.innerHTML;
                                }
                            }

                            // 3. Update Main Content
                            const newMain = newDoc.getElementById('cms-main');
                            const currentMain = document.getElementById('cms-main');
                            if (newMain && currentMain) {
                                if (newMain.innerHTML !== currentMain.innerHTML) {
                                    currentMain.innerHTML = newMain.innerHTML;
                                }
                            }
                            
                            console.log('[capsulo] Preview updated (targeted)');
                        } catch (error) {
                            console.warn('[capsulo] Targeted update failed, falling back to full reload:', error);
                            window.location.reload();
                        }
                    });
                }
            </script>
        )}
	</body>
</html>

